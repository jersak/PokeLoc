<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    app:paddingEnd="10dp">

    <ImageView
        android:id="@+id/pokemon_icon_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        tools:src="@mipmap/pikachu"/>

    <TextView
        android:id="@+id/pokemon_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/pokemon_icon_image_view"
        android:layout_toLeftOf="@+id/pokemon_checkbox"
        android:layout_toRightOf="@id/pokemon_icon_image_view"
        android:layout_toStartOf="@+id/pokemon_checkbox"
        android:gravity="left|start"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Pikachu"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/pokemon_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"/>

</RelativeLayout>